extends layout.pug

block index
    h2 Vista de productos
    form(action="/" method="post")
        div(class="mb-3 row")
            label(for="inputTitle" class="col-sm-2 col-form-label") Nombre
            div(class="col-sm-10")
                input(type="text" name="title" class="form-control" id="inputTitle" placeholder="Ingrese el nombre del producto" required)
        div(class="mb-3 row")      
            label(for="inputPrice" class="col-sm-2 col-form-label") Precio 
            div(class="col-sm-10")
                input(type="number" name="price" class="form-control" id="inputPrice" placeholder="Ingrese un precio" required)
        div(class="mb-3 row")      
            label(for="inputThumbnail" class="col-sm-2 col-form-label") URL foto 
            div(class="col-sm-10")
                input( type="text" name="thumbnail" class="form-control"  id="inputThumbnail" placeholder="Ingrese una imagen url del producto" required)
        div(class="col-auto")
            button(type="submit" class="btn btn-primary") Cargar producto
            a(href="/products" class="btn btn-success ms-4") Ver lista de productos

