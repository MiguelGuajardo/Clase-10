<div class="form-control-lg w-50 border border-primary m-auto"
>
  <h2>Vista de productos</h2>
  <form action="/" method="post">
    <div class="mb-3 row">
      <label for="inputTitle" class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input type="text" name="title" class="form-control" id="inputTitle" placeholder="Ingrese el nombre del producto" required />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputPrice" class="col-sm-2 col-form-label">Precio</label>
      <div class="col-sm-10">
        <input
          type="number"
          name="price"
          class="form-control"
          id="inputPrice"
          placeholder="Ingrese un precio"
          required
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputThumbnail" class="col-sm-2 col-form-label">URL foto</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="thumbnail"
          class="form-control"
          id="inputThumbnail"
          placeholder="Ingrese una imagen url del producto"
          required
        />
      </div>
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary">Cargar producto</button>
      <a href="/products" class="btn btn-success ms-4">Ver lista de productos</a>
    </div>
</div>